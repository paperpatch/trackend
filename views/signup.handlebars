<div class="d-flex flex-column align-items-center justify-content-center center flex-fill">
  <h1>Trackend Signup</h1>
  <form class="signup-form">
    <div>
      <label for="username-signup">Username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div>
      <label for="email-signup">Email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div>
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <label for="confirm-password">Confirm Password:</label>
      <input type="password" id="confirm-password" />
    </div>
    <div class="d-flex flex-column align-items-center">
      <button class="w-100" type="submit">Sign Up</button>
    </div>
  </form>

  <div>Already Have an Account? <a href="/login">Login</a></div>
  <div>Sign in as a <a href="/signup">Demo User</a></div>
</div>

<script src="/javascript/signup.js"></script>