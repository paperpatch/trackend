    <div class="col-sm card card-critical summary-card shadow text-light">
      <div class="row px-3 text-start">
        <div class="col">
          <div class="summary-number text-light">{{tickets.[0].critical_count}}</div>
          <div class="summary-text">Critical Priority Tickets</div>
        </div>
        <div class="col text-center">
          <i class="bi bi-pencil-square summary-icon"></i>
        </div>
        <div class="row mt-3 summary-link">
          <a href="/priority/1" class="text-center">View All</a>
        </div>
      </div>
    </div>
    <div class="col-sm card card-high summary-card shadow text-light">
      <div class="row px-3 text-start">
        <div class="col">
          <div class="summary-number text-light">{{tickets.[0].high_count}}</div>
          <div class="summary-text">High Priority Tickets</div>
        </div>
        <div class="col text-center">
          <i class="bi bi-card-list summary-icon"></i>
        </div>
        <div class="row mt-3 summary-link">
          <a href="/priority/2" class="text-center">View All</a>
        </div>
      </div>
    </div>
    <div class="col-sm card card-moderate summary-card shadow text-light">
      <div class="row px-3 text-start">
        <div class="col">
          <div class="summary-number text-light">{{tickets.[0].moderate_count}}</div>
          <div class="summary-text">Moderate Priority Tickets</div>
        </div>
        <div class="col text-center">
          <i class="bi bi-file-earmark-text summary-icon"></i>
        </div>
        <div class="row mt-3 summary-link">
          <a href="/priority/3" class="text-center">View All</a>
        </div>
      </div>
    </div>
    <div class="col-sm card card-low summary-card shadow text-light">
      <div class="row px-3 text-start">
        <div class="col">
          <div class="summary-number text-light">{{tickets.[0].low_count}}</div>
          <div class="summary-text">Low Priority Tickets</div>
        </div>
        <div class="col text-center">
          <i class="bi bi-clipboard-check summary-icon"></i>
        </div>
        <div class="row mt-3 summary-link">
          <a href="/priority/4" class="text-center">View All</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h4 class="page-title">Recent Updates:</h4>
      <ol class="ticket-list">
        {{#each tickets as |ticket|}}
        <li>
          {{> ticket-home ticket }}
        </li>
        {{/each}}
      </ol>
    </div>
  </div>
</div>
