<section class="profile">
  <h3 class="shadow">Profile</h3>
  <div class="profile-section shadow container">
    <div class="">
      <div class="row flex-column">
        <div class="col">
          <div class="row">
            <span class="profile-key col-3">ID: </span><span class="profile-text col">{{user.id}}</span>
          </div>
        </div>
        <div class="col">
          <div class="row">
            <span class="profile-key col-3">Username: </span><span class="profile-text col">{{user.username}}</span>
          </div>
        </div>
        {{#ifGuest user.role.role}}
        <div class="col">
          <div class="row">
            <span class="profile-key col-3">Email: </span><span class="profile-text col">{{user.email}}</span>
          </div>
        </div>
        <div class="col">
          <div class="row">
            <span class="profile-key col-3">Password: </span><span class="profile-text col">*********</span>
          </div>
        </div>
        {{/ifGuest}}
        <div class="col">
          <div class="row">
            <span class="profile-key col-3">Account Access: </span><span class="profile-text col">{{user.role.role}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>