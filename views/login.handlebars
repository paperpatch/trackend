<div class="d-flex flex-column align-items-center justify-content-center center flex-fill">
  <div class="login-signup-page shadow">
    <h1><big>T</big>RACKEND</h1>
    <h4 class="text-center">LOGIN</h4>
    <form class="login-form">
      <div>
        <label for="username-login">Username:</label>
        <input class="w-100" type="text" id="username-login" />
      </div>
      <div class="mt-4">
        <label for="password-login">Password:</label>
        <input class="w-100" type="password" id="password-login" /> <i class="bi bi-eye-slash" id="togglePassword"></i>
      </div>
      <div class="mt-5 d-flex flex-column align-items-center">
        <button class="front-btn w-100" type="submit">Login</button>
      </div>
    </form>

    {{!-- <div>Forgot your <a href="/signup">Password?</a></div> --}}
