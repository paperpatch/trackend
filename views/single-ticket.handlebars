<h2>Detail List</h2>

{{> ticket-single ticket}}

{{#ifOpen ticket.status}}
<button><a href="/dashboard/edit/{{ticket.id}}" class="edit-link">Edit ticket</a></button>
<button type="button" class="close-ticket-btn" id="closeBtn" onclick="closeTicket()">Close Ticket</button>
{{else}}
<button type="button" class="reopen-ticket-btn" id="reopenBtn" onclick="reopenTicket()">Open Ticket</button>
{{/ifOpen}}

<br/>

{{#ifOpen ticket.status}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>
{{/ifOpen}}

Comments:
{{> comments ticket.comments}}

<script src="/javascript/comment.js"></script>
<script src="/javascript/close-ticket.js"></script>
<script src="/javascript/reopen-ticket.js"></script>
<script src="/javascript/check-ticket-status.js"></script>